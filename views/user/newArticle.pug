extends layout.pug
block content
    h4 Add new article
    form(action="" method="POST")
        div(class="form-group")
            label(for="title") Title
            input(type="text" id="title" placeholder="Enter article title" name="title" class="form-control")
        div(class="form-group")
            label(for="content") Content
            textarea(name="content" id="content" placeholder="Enter article content" rows=5 class="form-control")
        div(class="form-group")
            input(type="submit" value="Save" class="btn btn-info")